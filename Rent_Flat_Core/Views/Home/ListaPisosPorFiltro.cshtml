@model IEnumerable<Rent_Flat_Core.Models.VIVIENDASPORFILTRO>

@{
    ViewData["Title"] = "ListaPisosPorFiltro";
    Layout = "~/Views/Shared/PlantillaFront.cshtml";
}

<h2>ListaPisosPorFiltro</h2>

<environment include="Development">

    <link rel="stylesheet" type="text/css" href="~/Front/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Front/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Front/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Front/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Front/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Front/styles/properties.css">
    <link rel="stylesheet" type="text/css" href="~/Front/styles/properties_responsive.css">

</environment>

<div class="properties">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title">@Model.Count() Casas Encontradas</div>
                @*<div class="section_subtitle">Search your dream home</div>*@
            </div>
        </div>
        <div class="row properties_row">
            @foreach (var item in Model)
            {
                <!-- Property -->
                <div class="col-xl-4 col-lg-6 property_col">

                    <div class="property">
                        @if (item.ViviendaImagen != null)
                        {
                            <div class="property_image">
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.ViviendaImagen)" alt="">
                                <div class="tag_featured property_tag"><a href="#">Featured</a></div>
                            </div>
                        }
                        else
                        {
                            <div class="property_image">
                                <img src="" alt="">
                                <div class="tag_featured property_tag"><a href="#">Featured</a></div>
                            </div>
                        }

                        <div class="property_body text-center" style="height:200px">
                            <div class="property_location">@item.NombreProvincia</div>
                            <div class="property_title"><a href="@Url.Action("Property",new { cod_casa = item.Cod_casa })">@item.Ubicacion | @item.Ciudad</a></div>
                            @if (item.PrecioAnterior.HasValue || item.PrecioAnterior > 0)
                            {
                                <div class="property_price" style="color:red;text-decoration:line-through;">@item.PrecioAnterior €/MES </div>
                            }
                            @if (item.PrecioActivo.HasValue || item.PrecioActivo > 0)
                            {
                                <div class="property_price">@item.PrecioActivo €/MES</div>
                            }
                        </div>
                        <div class="property_footer d-flex flex-row align-items-center justify-content-start">
                            <div><div class="property_icon"><img src="~/Content/Front/images/icon_2.png" alt=""></div><span>@item.Tamanio_vivienda m<sup>2</sup></span></div>
                            <div><div class="property_icon"><img src="~/Content/Front/images/icon_1.png" alt=""></div><span>@item.Num_habitaciones Habitaciones</span></div>
                            <div><div class="property_icon"><img src="~/Content/Front/images/icon_3.png" alt=""></div><span>@item.Num_banios</span></div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


<environment include="Development">
    <script src="~/Front/js/jquery-3.2.1.min.js"></script>
    <script src="~/Front/styles/bootstrap4/popper.js"></script>
    <script src="~/Front/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Front/plugins/greensock/TweenMax.min.js"></script>
    <script src="~/Front/plugins/greensock/TimelineMax.min.js"></script>
    <script src="~/Front/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="~/Front/plugins/greensock/animation.gsap.min.js"></script>
    <script src="~/Front/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="~/Front/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Front/plugins/easing/easing.js"></script>
    <script src="~/Front/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Front/js/properties.js"></script>

</environment>