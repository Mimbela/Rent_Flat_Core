@model IEnumerable<Rent_Flat_Core.Models.Clientes>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}


<div class="card">
    <div class="card-header">Clientes</div>
    <div class="card-body">
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Registrar nuevo cliente", "InsertarCliente", new { }, new { @class = "btn btn-warning" })
            </p>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">

                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.IdCliente)
                                    </th>*@
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmailCliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ciudad)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.IdCliente)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreCliente)

                                            @Html.DisplayFor(modelItem => item.ApellidoCliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailCliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Modificar", "ModificarCliente", new { id = item.IdCliente }, new { @class = "btn btn-success btn-sm" }) |
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCliente }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>


                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

