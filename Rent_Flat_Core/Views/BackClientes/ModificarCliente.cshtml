@model Rent_Flat_Core.Models.Clientes

@{
    ViewData["Title"] = "ModificarCliente";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
    List<SelectListItem> ComboCostas = ViewBag.ComboCostas;
}

<div class="card">
    <div class="card-header">Clientes</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ModificarCliente">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden>
                        <label asp-for="IdCliente" class="control-label"></label>
                        <input asp-for="IdCliente" class="form-control" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCliente" class="control-label"></label>
                        <input asp-for="NombreCliente" class="form-control" />
                        <span asp-validation-for="NombreCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApellidoCliente" class="control-label"></label>
                        <input asp-for="ApellidoCliente" class="form-control" />
                        <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailCliente" class="control-label"></label>
                        <input asp-for="EmailCliente" type="email" class="form-control" />
                        <span asp-validation-for="EmailCliente" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select name="Ciudad" class="form-control">
                                @foreach (var itemval in ComboCostas)
                                {
                                    <option value="@itemval.Value">@itemval.Text</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dni" class="control-label"></label>
                        <input asp-for="Dni" class="form-control" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Clientes">VOLVER</a>
        </div>
    </div>
    
</div>



