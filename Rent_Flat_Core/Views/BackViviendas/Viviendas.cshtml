@model IEnumerable<Rent_Flat_Core.Models.Viviendas>

@{
    ViewData["Title"] = "Viviendas";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}

<div class="card">
    <div class="card-header">Viviendas</div>
    <div class="card-body">
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Registrar Nueva Vivienda", "Create", new { }, new { @class = "btn btn-warning" })
            </p>
            <hr />
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>
                                        Ubicación
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Ciudad)
                                    </th>
                                    <th>
                                        Nº habitaciones
                                    </th>
                                    <th>
                                        Nº baños
                                    </th>
                                    <th>
                                        Tamaño vivienda
                                    </th>
                                    <th>
                                        Descripción
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ubicacion)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Num_habitaciones)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Num_banios)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tamanio_vivienda)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Modificar", "Edit", new { id = item.Cod_casa }, new { @class = "btn btn-success btn-sm" }) |
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Cod_casa }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

